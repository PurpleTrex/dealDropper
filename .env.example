# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dealDropper
REDIS_URL=redis://localhost:6379

# Amazon Configuration
AMAZON_ASSOCIATES_ID=your-associates-id
AMAZON_REGIONS=US,UK,CA,DE,FR,ES,IT,JP

# Social Media APIs
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CHANNEL_ID=your-discord-channel-id
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=deals@yourdomain.com

# Link Shortening
BITLY_ACCESS_TOKEN=your-bitly-access-token

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-password
APP_NAME=DealDropper
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Scraping Configuration
USER_AGENTS_ROTATE=true
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY_MIN=1
REQUEST_DELAY_MAX=3
USE_PROXY=false
PROXY_LIST=

# Deal Filtering
MIN_DISCOUNT_PERCENTAGE=20
MIN_PRODUCT_RATING=4.0
MIN_REVIEW_COUNT=50
MAX_PRICE_USD=500

# Scheduler Settings
SCRAPING_INTERVAL_MINUTES=15
POSTING_INTERVAL_MINUTES=5
CLEANUP_INTERVAL_HOURS=24
